@import 'lib';

/*
Colors selected by playing around with [1] with $mild-blue as the base color. To
be honest, I don't know much about color theory, but these looked like they fit
pretty well with our colorscheme.

[1] http://www.colorschemer.com/online.html

- openjck
*/
$colors = {
  'All': $mild-blue,
  'channel:release': #9b4be2,
  'channel:beta': #e24b91,
  'channel:aurora': #f3d6b4,
  'channel:nightly': #dde24b,
  'os:windows': #4be29b,
  'os:darwin': #de8f35,
  'os:linux': #de3b35,
};

for $population, $color in $colors {
  [data-population={'"' + $population + '"'}] {
    line, .line, .focus {
      stroke: $color;
    }

    .population-name {
      color: $color;
    }
  }
}
